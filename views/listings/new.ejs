<% layout("/layouts/boilerplate") -%>
    <body> <br>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Add New Listing</h3> <br>
                <form method="POST" action="/listings/new" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" class="form-control" name="listing[title]" placeholder="enter catchy title" required>
                        <div class="invalid-feedback">Fill this field!</div>
                        <div class="valid-feedback">Great Spot!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" id="description" class="form-control" name="listing[description]" placeholder="enter description" required></textarea>
                        <div class="invalid-feedback">Fill this field!</div>
                        <div class="valid-feedback">Good description!</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" id="image" class="form-control" name="listing[image]">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" class="form-control" name="listing[price]" placeholder="1200" required>
                            <div class="invalid-feedback">Fill this field!</div>
                            <div class="valid-feedback">Reasonable price!</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" class="form-control" name="listing[country]" placeholder="India" required>
                            <div class="invalid-feedback">Fill this field!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" class="form-control" name="listing[location]" placeholder="Kolkata, Hyderabad, Chennai" required>
                        <div class="invalid-feedback">Fill this field!</div>
                    </div>
                    <button class="btn btn-dark add-btn">Submit</button> <br> <br> <br>
                </form>
            </div>
        </div>
    </body>
