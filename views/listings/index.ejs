<% layout("/layouts/boilerplate") -%>
    <style>
        #options {
            display: flex;
            flex-direction: row;    /* horizontal layout */
            justify-content: space-between; /* space between filter and toggle */
            align-items: center;
            margin: 1rem 0;
        }

        @media (max-width: 991px) {
            #options {
                margin-top: 0 !important;
                transition: margin-top 0.3s;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                width: 100%;
            }
            #options.shifted {
                margin-top: 13rem !important; /* Adjust to match collapsed navbar height */
                flex-direction: column;
                align-items: stretch;
            }
            .tax-toggle {
                width: auto;
                margin-left: auto;
                margin-top: 0;
                text-align: center;
            }
        }
        @media (max-width: 767px) {
            #options {
                flex-direction: column;
                align-items: stretch;
            }
            .tax-toggle {
                width: 100%;
                margin-left: 0;
                margin-top: 1rem;
            }
        }

        #filters {
            display: flex;
            flex-direction: row;
            overflow-x: auto;        /* Enable horizontal scrolling */
            white-space: nowrap;     /* Prevent wrapping */
            gap: 2rem;               /* Add spacing between filter icons */
            padding-bottom: 0.5rem;  /* For aesthetic spacing below scroll bar */
            scrollbar-width: thin;   /* Optional: for Firefox */
        }
        #filters::-webkit-scrollbar {
            height: 6px;
        }
        #filters::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 10px;
        }
        #filters::-webkit-scrollbar-track {
            background: transparent;
        }

        .filter {
            text-align : center;
            opacity : 0.7;
            min-width: 60px;        /* Ensures a scrollable element size */
        }
        .filter:hover {
            opacity : 1;
            cursor : pointer;
        }

        .filter p {
            font-size : 0.8rem;
        }

        .tax-toggle {
            margin-left : auto; /* push to the right */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid #ccc;
            border-radius: 25px;
            background-color: #fff;
            font-size: 0.9rem;
            white-space: nowrap; /* keep text in one line */
        }

        .tax-info {
            display : none;
        }
    </style>
    <body> <br>
        <!-- <h3>All Listings</h3> <br> -->
        <!-- <form method="GET" action="/listings/new">
            <button>Create New</button>
        </form> -->
        <div id="options">
            <div id="filters">
                <div class="filter">
                    <div><i class="fa-solid fa-fire"></i></div>
                    <p>Trending</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-bed"></i></div>
                    <p>Rooms</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-mountain-city"></i></div>
                    <p>Iconic<br>Cities</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-mountain"></i></div>
                    <p>Mountain</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-person-swimming"></i></div>
                    <p>Amazing<br>Pools</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-campground"></i></div>
                    <p>Camping</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-water"></i></div>
                    <p>Lakeside</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-igloo"></i></div>
                    <p>Dome</p>
                </div>
                <div class="filter">
                    <div><i class="fa-solid fa-gamepad"></i></div>
                    <p>Play</p>
                </div>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card listing-card col">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height : 20rem;">
                        <div class="card-img-overlay"><%= listing.description %></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b> <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                                <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div> <br> <br>
        <script>
            let taxSwitch = document.querySelector("#flexSwitchCheckDefault");
            taxSwitch.addEventListener("click", () => {
                let taxInfo = document.querySelectorAll(".tax-info");
                for(let info of taxInfo)
                {
                    if(info.style.display != "inline")
                    {
                        info.style.display = "inline";
                    }
                    else
                    {
                        info.style.display = "none";
                    }
                }
            });
            document.addEventListener("DOMContentLoaded", function() {
                const navbarCollapse = document.getElementById("navbarNavAltMarkup");
                const optionsDiv = document.getElementById("options");

                if (navbarCollapse && optionsDiv) {
                    navbarCollapse.addEventListener("show.bs.collapse", function () {
                        optionsDiv.classList.add("shifted");
                    });
                    navbarCollapse.addEventListener("hide.bs.collapse", function () {
                        optionsDiv.classList.remove("shifted");
                    });
                }
            });
        </script>
    </body>
